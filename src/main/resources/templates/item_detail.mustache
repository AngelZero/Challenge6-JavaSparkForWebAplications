<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>{{name}}</title>
    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="/offer.css">
</head>
<body>
<a class="back-link" href="/ui/items">&larr; Back to list</a>

<div class="detail-item">
    <div class="detail-text">
        <div class="detail-name">{{name}}</div>
        <div class="detail-price">{{price}} {{currency}}</div>
        <div class="detail-description">{{description}}</div>

        <button class="offer-btn">Make an offer</button>

        <form id="offer-form" style="display:none; margin-top: 16px;">
            <input type="hidden" id="item-id-input" value="{{id}}">
            <div class="form-item">
                <label class="form-label" for="name-input">Name</label>
                <input class="form-input" id="name-input" type="text" required>
            </div>
            <div class="form-item">
                <label class="form-label" for="email-input">Email</label>
                <input class="form-input" id="email-input" type="email" required>
            </div>
            <div class="form-item">
                <label class="form-label" for="amount-input">Amount</label>
                <input class="form-input" id="amount-input" type="number" step="0.01" min="0" required>
            </div>
            <button class="form-button" type="submit">Submit offer</button>
            <div class="error-message" id="offer-error" style="display:none;"></div>
        </form>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script src="/offer.js"></script>
</body>
</html>
